<%= form_for(@movie) do |f| %>
  

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :year_released %><br>
    <%= f.number_field :year_released %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
